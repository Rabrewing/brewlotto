{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "nodenext", // üîÅ Supports .cjs/.mjs & Node-style packages
    "baseUrl": ".", // üß≠ Required for paths below
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // üßæ Enables clean JSON/default imports
    "jsx": "preserve",
    "incremental": true,
    "strict": true,
    "noEmit": true,
    "types": [
      "node",
      "estree",
      "json-schema",
      "jest",
      "mocha"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "scripts/BrewMergeFileScanner.cjs",
    "pages/api/generate-merge-report.js",
    "scripts/generateMergeReadinessReport.cjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
